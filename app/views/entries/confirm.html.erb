<div class="confirm">
  <div class="confirm_container">
    <h3>以下の内容で投稿してよろしいですか？</h3>

    <%= form_with(model: @entry, local: true) do |f| %>
      <div class="photo_show">
        <%= image_tag @entry.image.url if @entry.image && @entry.image.url %>
      </div>
      <div class="confirm_content_area">
        <%= @entry.content %>
        <%= f.hidden_field :image %>
        <%= f.hidden_field :image_cache %>
        <%= f.hidden_field :content %>
      </div>

      <div class="confirm_button">
        <span class="btn_back">
          <%= f.submit '戻る', name: 'back', class: 'btn_submit' %>
        </span>
        <span class="btn_send">
          <%= f.submit '投稿', class: 'btn_submit' %>
        </span>
      </div>
    <% end %>
  </div>
</div>
