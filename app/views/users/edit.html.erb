<%= render 'header' %>

<%= form_with(model: @user, local: true) do |f| %>
  <div class="now_user_image">
    <% if @user.user_image.present? %>
      <%= image_tag @user.user_image.url, class: 'user_icon' %>
    <% else %>
      <%= icon 'fas', 'user-circle', class: 'user_icon' %>
    <% end %>
  </div>
  <div class="user_name">
    <%= @user.user_name %>
  </div>
  <div class="user_image_edit">
    <%= f.file_field :user_image %>
  </div>

  <table>
    <tr>
      <th>
        <%= '名前' %>
      </th>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <th>
        <%= 'ユーザーネーム' %>
      </th>
      <td>
        <%= f.text_field :user_name %>
      </td>
    </tr>
    <tr>
      <th>
        <%= 'メールアドレス' %>
      </th>
      <td>
        <%= f.email_field :email %>
      </td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td>
        <%= f.submit '送信する' %>
      </td>
    </tr>
  </table>
<% end %>
